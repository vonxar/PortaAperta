<div class="message">
  <div class="kaiwa">
    <% if message.user == current_user %>
      <% position = 'right' %>
    <% else %>
      <% position = 'left' %>
    <% end %>
    <figure class="kaiwa-img-<%= position %>">
      <%= attachment_image_tag message.user, :profile_image, size: "500x400",  fallback: "noimage.svg", class: "portfolio_image"%>
      <figcaption class="kaiwa-img-description">
        <%= message.user.name %>
      </figcaption>
    </figure>
    <div class="kaiwa-text-<%= position %>">
      <%= simple_format(message.content) %>
    </div>
  </div>
</div>