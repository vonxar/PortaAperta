  <% if port.liked_by?(current_user) %>
    <li>
    <%= link_to portfolio_likes_path(port.id), method: :delete,remote: true do %>
    <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= port.likes.count %> いいね
    <% end %>
      </li>
  <% else %>
    <li>
      <%= link_to portfolio_likes_path(port.id), method: :post,remote: true do %>
      <i class="fa fa-heart-o" aria-hidden="true"></i>
      <%= port.likes.count %> いいね
      <% end %>
      </li>
  <% end %>