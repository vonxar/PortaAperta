  <% portfolio.comments.each do |comment| %>
     <tr id="comment-<%= comment.id %>">
        <td><a href="#" class="link-autdor"><%= comment.user.name %></a></td>
        <td><%= comment.comment %></td>
        <td><%= comment.created_at.strftime('%Y/%m/%d') %></td>
       <% if comment.user == current_user %>
         <td><%= link_to '削除', portfolio_comment_path(comment.portfolio.id,comment.id), method: :delete,remote: true, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-danger"%></td>
       <% end %>
     </tr>
    <% end %>
    
