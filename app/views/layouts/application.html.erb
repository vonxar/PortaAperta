<!DOCTYPE html>
<html>
  <head>
    <title>PortaAperta</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag('favicon.ico') %>
    <script src="https://kit.fontawesome.com/f95b9e0dc0.js" crossorigin="anonymous"></script>
  </head>
  <heder>
             <nav>
              <ul class="navbar nav-pills navbar-dark bg-dark justify-content-end sticky-top ">
               <%=image_tag 'logo.jpg',class: "text-left", style: "width:190px; height:60px; border-radius:100%; margin-right: auto;" %>
                <!-- 会員でログインしている時 -->
                <% if user_signed_in? %>
                <%= link_to user_path(current_user.id),data: {turbolinks: "flalse"} do %><%= attachment_image_tag current_user, :profile_image, size: "75x60",  fallback: "my_noimage.jpg" ,style: "border-radius: 50%;"%><% end %>
                 <!--<%#= link_to user_path(current_user.id), data: {turbolinks: "false"} do %><%#= image_tag "cat.png" ,style: "width:60px; height:60px; top:0; left:0; border-radius: 50%;"%><%# end %>-->
                  <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user"></i>マイページ</a>
                  <div class="dropdown-menu">
                   <a class="dropdown-item" href="/users/<%= current_user.id %>" data-turbolinks="false">マイページ</a>
                    <a class="dropdown-item" href="#1" data-turbolinks="false">投稿</a>
                     <a class="dropdown-item" href="#2" data-turbolinks="false">投稿一覧</a>
                      <a class="dropdown-item" href="#3" data-turbolinks="false">お気に入り</a>
                   </div></li>
                  <li><%= link_to top_path do %><i class="fas fa-cookie-bite"></i>一覧<% end %></li>
                  <li><%= link_to destroy_user_session_path, method: :delete do %><i class="fas fa-sign-out-alt"></i>ログアウト<% end %></li>
                <!-- ログインしていない時 -->
                <% else %>
                  <li class="nav-item"><%= link_to "#" do %><i class="fas fa-cookie-bite"></i>商品一覧<% end %></li>
                  <li class="nav-item"><%= link_to "#" do %><i class="fas fa-building"></i>会社概要<% end %></li>
                  <li class="nav-item"><%= link_to "#" do %><i class="fas fa-user-plus"></i>新規登録<% end %></li>
                  <li class="nav-item"><%= link_to new_user_session_path do %><i class="fas fa-sign-in-alt"></i>ログイン<% end %></li>
                  <li class="nav-item"><%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post %></li>
                <% end %>
              </ul>
            </nav>
           
  </heder>

  <body>
    <%= flash_message(flash[:success], :success) if flash[:success] %> <!--緑 flash messge application_helperに記述-->
    <%= flash_message(flash[:error], :danger) if flash[:error] %> <!-- 赤 -->
    <%= flash_message(flash[:alert], :warning) if flash[:alert] %> <!--黄-->
    <%= flash_message(flash[:notice], :info) if flash[:notice] %> <!--青 -->
   <div class="container" style="min-width:80%;">
    <%= yield %>
   </div>
  </body>
</html>
