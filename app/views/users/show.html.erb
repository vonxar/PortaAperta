<div class="side">
<h5>マイページです。</h5>
<%= attachment_image_tag current_user, :profile_image, size: "100x100",  fallback: "noimage.svg" ,style: "border-radius: 50%; margin: 20px;"%><br>
<div class="container">
   <P><%= current_user.introduction %></p>
   <div class="row">
    <div class="col-1"></div>
    <div class="col-2"><%= @user_portfolios.count %></div>
    <div class="col-2"><%= @favorites.count %></div>

    <!-- Force next columns to break to new line -->
    <div class="w-100"></div>
     <div class="col-1"></div>
    <div class="col-2"><i class="fas fa-file-powerpoint" style="color:blue;"></i></div>
    <div class="col-2"><i class="fas fa-star" style="color:gold;"></i></div>
  </div>
</div>

<ul>
<li><a href="#1">投稿</a></li>
<li><a href="#2">投稿一覧</a></li>
<li><a href="#3">お気に入り</a></li>
<li><a href="/users/<%= current_user.id %>/edit" data-turbolinks="false">プロフィール編集</a></li>
</ul>
</div>


<h2 id="1">投稿</h2>
 <%= form_for(@portfolio, url:portfolios_path,method: "post") do |f| %>
 
      <div class="tag-field">
       <%= f.label :portfolio, "タグ" %>
       <div class="output"><%= f.text_field :tag_list, value: @portfolio.tag_list.join(','), placeholder: "例) rails,", data: {role: "tagsinput"},class: "form-control" %></div>
       <%= f.hidden_field :tag_list,:value => @portfolio.tag_list.join(','), id: "hid"%>
       </div>
 
      <div class="portfolio-image">
        <%= attachment_image_tag @portfolio, :image, class: "img-square", fallback: "noimage.svg", size:"300x300" %>
      </div><br>

      <%= f.attachment_field :image, placeholder: "画像" %>
      
  <div class="ield">
          <%= f.label :title %>
          <%= f.text_field :title, autofocus: true, autocomplete: "title"%>
  </div>
 
  <div class="field">
    <%= f.label :body %>
    <%= f.rich_text_area :body %>
  </div>
  <div><%= f.submit "portfolio登録" ,class: "btn btn-primary",id: "tag_lists"%></div>
<% end %><br>


<!--投稿一覧-->
<div class="row row-cols-2 ports">
<%= render partial: 'portfolios/portfolio_all',collection: @user_portfolios,as: "port" %>
</div>

<h3 id="3">お気に入り</h3><br>
<div class="row row-cols-2">
<% @favorites.each do |favo| %>
<div class="col">
  <%= link_to portfolio_path(favo.id) do %>
<%= favo.title %><br>
<%= attachment_image_tag favo, :image, size: "500x400",  fallback: "noimage.svg"%><% end %>
<%= favo.body %><br>
 <div id="favorite_btn_<%= favo.id %>">
    <%= render 'favorites/favorite',port: favo %>
 </div>
</div>
<% end %>
</div>


