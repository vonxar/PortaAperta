<!--ソート機能-->
<%= form_with model: portfolios, url: search_portfolios_path, method: :get, remote: true do |f| %>
  <%= f.select :keyword, [ ['投稿が新しい順', 'new'],
                            ['投稿が古い順', 'old'],
                            ['いいねが多い順', 'likes'],
                            ['いいねが少ない順', 'dislikes'],
                          ] %>
  <%= f.submit "並び替え" ,class: "btn btn-primary"%>
<% end %>