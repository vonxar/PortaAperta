<div class="row">
 <!--インクリメンタル検索-->
  <div class="col-3">
   タイトル名<input type=form id="search" placeholder="検索内容を入力してください" style="width: 250px;"/>
   <ul id="result">
   </ul>
  </div>
 
  <div class="col-6">
   <button type="button" class="btn btn-light" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" style="margin-bottom: 10px;">
     タグ一覧
   </button>
 　 <div class="collapse" id="collapseExample">
     <% @tags.each do |tag| %>
      <% if tag.taggings_count > 0 %>
      <button type="button" class="btn btn-secondary" style="margin: 0 5px 5px 0;">
       <span><%= link_to tag, top_path(tag_name: tag.name),class: "badge badge-secondary" %><%= tag.taggings_count %></span>
       </button>
      <% end %>
     <% end %>
   </div>
  </div>
 <!--ソート機能-->
  <div class=" col-3">
    <%= render 'select_form', portfolios: @portfolios %>
  </div>
</div>


<!--投稿一覧-->
<h2>投稿一覧</h2>
 <div class="row row-cols-2 ports">
  <%= render partial: 'portfolio_top',collection: @portfolios,as: "port" %>
 </div>
<%= paginate @portfolios %>